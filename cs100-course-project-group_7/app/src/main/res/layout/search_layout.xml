<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/search_single_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/default_pic" />

    <TextView
        android:id="@+id/search_single_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="99dp"
        android:text="@string/singledisplayname"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/search_single_status"
        android:layout_width="93dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_single_name"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/user_single_image"
        android:maxLines="1"
        android:minLines="1"
        android:text="@string/singlestatus" />

    <ImageView
        android:id="@+id/user_single_online_icon"
        android:layout_width="9dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/user_single_image"
        android:layout_toEndOf="@+id/user_single_image"
        android:visibility="invisible"
        app:srcCompat="@drawable/online_icon" />
</RelativeLayout>