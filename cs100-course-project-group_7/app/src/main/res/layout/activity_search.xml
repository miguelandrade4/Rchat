<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Search"
    android:background="#c1c5cc">

    <TextView
        android:id="@+id/Search_User"
        android:layout_width="184dp"
        android:layout_height="41dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Search User"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="24dp" />

    <EditText
        android:id="@+id/User_Name"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/Search_User"
        android:layout_marginTop="88dp"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:inputType="textPersonName"
        android:paddingTop="10dp"
        android:textAllCaps="true"
        android:textColor="#999999"
        android:textSize="20dp"
        app:layout_constraintEnd_toStartOf="@+id/user_search_button"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="79dp" />

    <Button
        android:id="@+id/user_search_button"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_alignEnd="@+id/result_list"
        android:layout_alignTop="@+id/User_Name"
        android:text="Search"
        android:background="@color/colorPrimaryDark"
        android:textColor="#ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="79dp" />

    <TextView
        android:id="@+id/Display_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/Search_User"
        android:layout_marginTop="60dp"
        android:text="Search by User Name"
        android:textColor="@color/colorPrimaryDark"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="59dp" />

    <TextView
        android:id="@+id/Display2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/Search_User"
        android:layout_marginTop="140dp"
        android:text="Search by Email"
        android:textColor="@color/colorPrimaryDark"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="173dp" />

    <EditText
        android:id="@+id/User_email"
        android:layout_width="238dp"
        android:layout_height="42dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/Search_User"
        android:layout_marginTop="169dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:textColor="#999999"
        app:layout_constraintEnd_toStartOf="@+id/user_email_button"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="192dp" />

    <Button
        android:id="@+id/user_email_button"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_alignStart="@+id/user_search_button"
        android:layout_alignTop="@+id/User_email"
        android:text="Search"
        android:background="@color/colorPrimaryDark"
        android:textColor="#ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="192dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/result_list"
        android:layout_width="347dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="230dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="242dp"></android.support.v7.widget.RecyclerView>

</RelativeLayout>